---
interface Props {
  title: string;
}

import "../styles/Layout.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Porfolio Web | {title}</title>

    <!-- Open Graph meta tags -->
    <meta property="og:title" content="Porfolio Web" />
    <meta
      property="og:description"
      content="Crea tu pagina web."
    />
    <meta
      property="og:image"
      content="public/Fondorrss.png"
    />
    <meta property="og:url" content="https://crislobos.com" />
    <meta property="og:type" content="website" />
  </head>
  <body>
    <slot />
  </body>
</html>
